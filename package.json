{
  "name": "decanter",
  "description": "Pattern Library and CSS Framework.",
  "author": "Stanford University",
  "version": "7.0.0-dev",
  "homepage": "https://github.com/SU-SWS/decanter",
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode=development",
    "build:dev": "webpack --mode=development --config dev/webpack.dev.config.js",
    "publish": "webpack --mode=production",
    "wind": "tailwindcss build src/css/index.css -o dist/decanter.css",
    "eslint": "eslint -c .eslintrc 'core/src/'",
    "start": "live-server dev/dist --port=9090 --verbose",
    "watch": "nodemon --watch ./ --ext js,css,html --ignore dist --ignore node_modules --ignore dev/dist --exec \"npm run build:dev\"",
    "dev:prep": "touch dev/src/test.css && touch dev/src/test.js && cp dev/src/sample.test.html dev/src/test.html"
  },
  "keywords": [
    "css",
    "styleguide",
    "Stanford"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SU-SWS/decanter.git"
  },
  "bugs": {
    "url": "https://github.com/SU-SWS/decanter/issues"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.0",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.2.1",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.0",
    "custom-event-polyfill": "^1.0",
    "eslint": "^7.14",
    "extra-watch-webpack-plugin": "^1.0.3",
    "file-loader": "^6.2.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.0",
    "jsdoc": "^3.6.6",
    "live-server": "^1.2.1",
    "mini-css-extract-plugin": "^1.3.1",
    "nodemon": "^2.0.6",
    "postcss-import": "^13.0.0",
    "postcss-loader": "^4.0.0",
    "postcss-nested": "^5.0.1",
    "style-loader": "^2.0.0",
    "tailwindcss-debug-screens": "^2.0.0",
    "webpack": "^5.8.0",
    "webpack-cli": "^4.2.0"
  }
}
