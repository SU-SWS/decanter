{
  "name": "decanter",
  "description": "Pattern Library and CSS Framework.",
  "author": "",
  "version": "6.0.0-alpha.1",
  "homepage": "https://github.com/SU-SWS/decanter",
  "license": "MIT",
  "srcDir": "core/src/",
  "distDir": "core/dist/",
  "kssSrcDir": "kss/builder/decanter/",
  "kssDistDir": "styleguide/",
  "scripts": {
    "build": "webpack --mode=development",
    "dist": "webpack --mode=production",
    "styleguide": "kss --config=kss/kss-config.json",
    "watch": "webpack --mode=development --watch",
    "start": "webpack-dev-server --mode=development --open",
    "dev": "npm run build && npm run styleguide && npm run watch && npm run start",
    "eslint": "eslint -c .eslintrc 'core/src/'",
    "sasslint": "sass-lint -c .sass-lint.yml '**/*.scss' -v -q -i 'vendor/**/*.scss, node_modules/**/*.scss, kss/builder/decanter/**/*.scss'"
  },
  "keywords": [
    "css",
    "scss",
    "styleguide",
    "Stanford"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SU-SWS/decanter.git"
  },
  "bugs": {
    "url": "https://github.com/SU-SWS/decanter/issues"
  },
  "dependencies": {
    "bourbon": "^5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6",
    "@babel/preset-env": "^7.6",
    "@fortawesome/fontawesome-free": "^5.11.2",
    "autoprefixer": "^9.6",
    "babel-loader": "^8.0",
    "css-loader": "^2.1",
    "eslint": "^5.16",
    "extra-watch-webpack-plugin": "^1.0",
    "file-loader": "^3.0",
    "filemanager-webpack-plugin": "^2.0",
    "grunt": "^1.0",
    "grunt-browser-sync": "^2.2",
    "grunt-contrib-clean": "^1.1",
    "grunt-contrib-copy": "^1.0",
    "grunt-contrib-watch": "^1.1",
    "grunt-deploy-site": "~0.1.3",
    "grunt-run": "^0.8",
    "jquery": "^3.4",
    "kss": "^3.0.0-beta.25",
    "mini-css-extract-plugin": "^0.5",
    "node-sass": "~4.12",
    "optimize-css-assets-webpack-plugin": "^5.0",
    "postcss-loader": "^3.0",
    "sass-lint": "^1.13",
    "sass-loader": "^7.3",
    "style-loader": "^0.23",
    "twig": "^1.13",
    "uglifyjs-webpack-plugin": "^2.2",
    "url-loader": "^1.1",
    "webpack": "^4.41",
    "webpack-assets-manifest": "^3.1",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.9",
    "webpack-manifest-plugin": "^2.2"
  }
}
