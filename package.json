{
  "name": "decanter",
  "description": "Design System Tailwind CSS Preset.",
  "author": "Stanford Web Services",
  "version": "7.4.0",
  "homepage": "https://github.com/SU-SWS/decanter",
  "license": "GPL-3.0-or-later",
  "keywords": [
    "CSS",
    "Decanter",
    "Stanford",
    "Tailwind CSS"
  ],
  "main": "src/css/index.css",
  "style": "src/css/index.css",
  "exports": {
    ".": {
      "style": "./src/css/index.css",
      "default": "./src/css/index.css"
    },
    "./src/*": "./src/*",
    "./package.json": "./package.json",
    "./fonts-basic.css": "./fonts-basic.css",
    "./fonts.css": "./fonts.css"
  },
  "files": [
    "src/",
    "fonts.css",
    "fonts-basic.css",
    "README.md",
    "license.md"
  ],
  "scripts": {
    "build": "npx @tailwindcss/cli -i src/css/dev.css -o static/css/decanter.css",
    "watch": "npx @tailwindcss/cli -i src/css/dev.css -o static/css/decanter.css --watch",
    "serve": "light-server -s static -w static/*.html",
    "dev": "concurrently \"npm:serve\" \"npm:watch\"",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SU-SWS/decanter.git"
  },
  "bugs": {
    "url": "https://github.com/SU-SWS/decanter/issues"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/postcss": "^4.1.12",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "auto-changelog": "^2.2.1",
    "concurrently": "^9.2.1",
    "light-server": "^2.9.1"
  },
  "optionalDependencies": {
    "@tailwindcss/cli": "^4.1.12"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
