{#
/**
 * @file
 * Template for a complex column panel layout.
 *
 * This template provides a complex column panel display layout, with
 * each column roughly equal in width.
 *
 * Variables:
 * -
 * -
 *
 *
 *
 */
#}
<div{{ attributes }} class="layout {{ modifier_class }}">
  {# Optional Header #}
  {% if header is not empty %}
  <header class="flex-12-of-12">
    {{ header }}
  </header>
  {% endif %}

  {# Required content section #}
  <div class="flex-container">
    <aside class="flex-md-4-of-12">
      {{ sidebar }}
    </aside>

    <section class="flex-md-8-of-12">
      {{ content }}
    </section>
  </div>

  {# Optional footer #}
  {% if footer is not empty %}
  <footer class="flex-12-of-12">
    {{ footer }}
  </footer>
  {% endif %}
</div>
