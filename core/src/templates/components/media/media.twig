{#
/**
 * @file
 * Media Component
 *
 * A media element, e.g., image, video, audio, etc.
 *
 * Available variants:
 *
 * Available variables:
 * - attributes: For additional HTML attributes not already provided.
 * - modifier_class: Additional CSS classes to change look and behavior.
 * - media_wrapper_modifier_class: Additional CSS classes to change look and behavior of the media wrapper, e.g. provide aspect ratio constraint.
 * - media_embed: The full embedded HTML <iframe> element
 * - media_image_src: The src link to the image file
 * - media_video_src: The src link to the video file
 * - media_video_poster: The preview image of the video
 * - media_audio_src: The src link to the audio file
 * - media_content_attributes: Additional HTML attributes for the media content, e.g., for <video> - controls, autoplay; for <img> - alt, width, height
 * - media_caption: Caption for the media.
 */
#}
<figure {{ attributes }} class="su-media {{ modifier_class }}">
    <div class="su-media__wrapper {{ media_wrapper_modifier_class }}">
      {% if 'su-media--embed' in modifier_class %}
        {{ media_embed }}
      {% elseif 'su-media--video' in modifier_class %}
        <video controls src="{{ media_video_src }}"
          {% if media_video_poster %}
            poster="{{ media_video_poster }}"
          {% endif %}
        {{ media_content_attributes }}></video>
      {% elseif 'su-media--audio' in modifier_class %}
        <audio src="{{ media_audio_src }}" {{ media_content_attributes }} controls></audio>
      {% else %}
        <img src="{{ media_image_src }}" {{ media_content_attributes }}>
      {% endif %}
    </div>

  {% if media_caption %}
    <figcaption class="su-media__caption">{{ media_caption }}</figcaption>
  {% endif %}
</figure>