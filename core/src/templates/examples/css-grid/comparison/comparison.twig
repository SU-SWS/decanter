<h5>Flexbox Grid</h5>

<div>
    <section class="flex-container centered-container">
      <div class="flex-item flex-lg-4-of-12 flex-xl-4-of-12 flex-2xl-4-of-12">
        {{ firstFlex }}
      </div>

      <div class="flex-item flex-lg-4-of-12 flex-xl-4-of-12 flex-2xl-4-of-12">
        {{ secondFlex }}
      </div>

      <div class="flex-item flex-lg-4-of-12 flex-xl-4-of-12 flex-2xl-4-of-12">
        {{ thirdFlex }}
      </div>
    </section>
</div>

<figure class="kss-highlight">
  <pre>
  <span class="nt">&lt;section </span><span class="na">class=</span><span class="s">"flex-container centered-container"</span><span class="nt">&gt;</span>
    <span class="nt">&lt;div </span><span class="na">class=</span><span class="s">"flex-item flex-lg-4-of-12 flex-xl-4-of-12 flex-2xl-4-of-12"</span><span class="nt">&gt;</span>
      <span class="c">&lt;!-- Content --&gt;</span>
    <span class="nt">&lt;/div&gt;</span>
    <span class="c"> ... </span>
  <span class="nt">&lt;/section&gt;</span>
  </pre>
</figure>

<h5>CSS Grid</h5>

<div{{ attributes }} class="layout layout-bars {{ modifier_class }}">
  <div>
    <section {{ region_attributes.first }}>
      {{ firstCss }}
    </section>

    <section {{ region_attributes.second }}>
      {{ secondCss }}
    </section>

    <section {{ region_attributes.third }}>
      {{ thirdCss }}
    </section>
  </div>
</div>
<figure class="kss-highlight">
  <pre>
    <span class="nt">&lt;div </span><span class="na">class=</span><span class="s">"layout layout-bars "</span><span class="nt">&gt;</span>
      <span class="nt">&lt;section&gt;</span>
        <span class="c">&lt;!-- Content --&gt;</span>
      <span class="nt">&lt;/section&gt;</span>
      <span class="c"> ... </span>
    <span class="nt">&lt;/div&gt;</span>
  </pre>
</figure>
