<div class="flex-container">
  {% block body %}
  <section class="flex-item flex-lg-6-of-12 flex-xl-6-of-12 flex-2xl-6-of-12">
    {{ first }}
  </section>

  <section class="flex-col flex-item flex-lg-6-of-12 flex-xl-6-of-12 flex-2xl-6-of-12">
    {{ second }}
  </section>
  {% endblock %}
</div>
