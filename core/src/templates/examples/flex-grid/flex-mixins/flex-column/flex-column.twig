{#
/**
 * @file
 * Flex-doc â€” Flex-Grid Documentation.
 *
 * This template provides an example of span 2 of 12 columns in
 * addition to the flex push 5 in a four column panel display layout,
 * with each column equal in width and the fourth column pushed to the far right.
 *
 * Variables:
 * attributes - html attributes for the template wrapper tag
 * modifier_class - Variant modifier css classes
 * first - First of three equal columns
 * second - Second of three equal columns
 * body - A block area to allow for others to change wrappers around regions.
 */
#}

<div class="flex-container centered-container">
  {% block body %}
  <section class="flex-item flex-lg-4-of-12 flex-xl-4-of-12 flex-2xl-4-of-12">
    {{ first }}
  </section>

  <section class="flex-push flex-item flex-lg-2-of-12 flex-xl-2-of-12 flex-2xl-2-of-12">
    {{ second }}
  </section>
  {% endblock %}
</div>

<figure class="kss-highlight">
  <pre>
    <span class="nt">&lt;section </span><span class="na">class=</span><span class="s">"flex-container centered-container"</span><span class="nt">&gt;</span>
    <span class="nt">&lt;div </span><span class="na">class=</span><span class="s">"flex-item flex-lg-4-of-12 flex-xl-4-of-12 flex-2xl-4-of-12"</span><span class="nt">&gt;</span>
      <span class="c">&lt;!-- Content --&gt;</span>
    <span class="nt">&lt;/div&gt;</span>
      <span class="c">&lt;!-- The next div contains the class "flex-push" which uses the @flex-grid-push mixins. --&gt;</span>
    <span class="nt">&lt;div </span><span class="na">class=</span><span class="s">flex-push flex-item flex-lg-2-of-12 flex-xl-2-of-12 flex-2xl-2-of-12"</span><span class="nt">&gt;</span>
      <span class="c">&lt;!-- Content --&gt;</span>
    <span class="nt">&lt;/div&gt;</span>
    <span class="nt">&lt;/section&gt;</span>
  </pre>
</figure>
