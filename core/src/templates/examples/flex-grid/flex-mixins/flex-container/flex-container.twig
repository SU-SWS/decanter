<div{{ attributes }} class="layout {{ modifier_class }}">
  <div class="flex-container centered-container">
    {% block body %}
    <section class="flex-md-4-of-12 flex-lg-4-of-12 flex-xl-4-of-12 flex-2xl-4-of-12">
      {{ first }}
    </section>

    <section class="flex-md-4-of-12 flex-lg-4-of-12 flex-xl-4-of-12 flex-2xl-4-of-12">
      {{ second }}
    </section>

    <section class="flex-md-4-of-12 flex-lg-4-of-12 flex-xl-4-of-12 flex-2xl-4-of-12">
      {{ third }}
    </section>
    {% endblock %}
  </div>
</div>

