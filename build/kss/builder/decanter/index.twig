<body id="kss-node" class="{% if template.isItem %}kss-fullscreen-mode{% endif %}{% if template.isHomepage %} kss-home{% endif %}">

{%
  include "@decanter/components/brand-bar/brand-bar.twig" with
  {
    "modifier_class": "su-brand-bar--bright",
  }
  only
%}

<header class="masthead">
  <div>
    <span class="brand-logo"><a href="/">Decanter</a></span>
    <nav class="su-main-nav su-main-nav--right su-main-nav--dark" role="main menu">
      <button class="su-main-nav__toggle" aria-expanded="false">Menu</button>
      <ul class="su-main-nav__menu-lv1">
        <li><a href="/">Home</a></li>
        <!-- <li><a href="https://decanter.stanford.edu/" class="nav-visual">Visual Guidelines</a></li> -->
        <li class="su-main-nav__item--parent"><a href="/section-core.html">Core</a>
          <ul class="su-main-nav__menu-lv2">
            <li><a href="/section-core.html#kssref-core-colors">Colors</a></li>
            <li><a href="/section-core.html#kssref-core-flexgrid">Flex Grid</a></li>
            <li><a href="/section-core.html#kssref-core-fonts">Fonts</a></li>
            <li><a href="/section-core.html#kssref-core-helpers">Helpers</a></li>
          </ul>
        </li>
        <li><a href="/section-elements.html">HTML Elements</a></li>
        <li><a href="/section-components.html">Components</a></li>
        <li class="su-main-nav__item--parent"><a href="/section-layout.html">Page Layouts</a>
          <ul class="su-main-nav__menu-lv2">
            <li><a href="/section-layout.html#kssref-layout-flex">Flexbox Layouts</a></li>
            <li><a href="/section-layout.html#kssref-layout-grid">CSS Grid Layouts</a></li>
          </ul>
        </li>
        <li class="su-main-nav__item--parent"><a href="/section-variables.html">Utilities</a>
          <ul class="su-main-nav__menu-lv2">
            <li><a href="/section-variables.html#kssref-variables">Variables</a></li>
            <li><a href="/section-mixins.html">Mixins</a></li>
            <li><a href="/section-functions.html">Functions</a></li>
            <li><a href="/section-placeholders.html">Placeholders</a></li>
          </ul>
        </li>
        <!-- <li><a href="https://decanter.stanford.edu/" class="nav-examples">Examples in Action</a></li> -->
        <li class="su-main-nav__item--parent"><a href="https://github.com/SU-SWS/decanter/wiki">Resources</a>
          <ul class="su-main-nav__menu-lv2">
            <li><a href="https://github.com/SU-SWS/decanter">GitHub Repo</a></li>
            <li><a href="https://github.com/SU-SWS/decanter/wiki">Wiki Page</a></li>
