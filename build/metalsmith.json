{
  "source": "build/src/",
  "destination": "styleguide/",
  "metadata": {
    "title": "Decanter - Design System",
    "description": "It's about sharing.",
    "generator": "Metalsmith",
    "url": "https://decanter.stanford.edu/"
  },
  "debug": true,
  "clean": true,
  "plugins": [
    {
      "build/plugins/jsdoc.js": {}
    },
    {
      "build/plugins/kss.js": {
        "source": "./core/src/scss/components",
        "destination": "./styleguide/components",
        "css": [
          "css/decanter.css"
        ],
        "js": [
          "js/decanter.js"
        ],
        "builder": "builder/twig",
        "extend-drupal8": true,
        "namespace": "decanter:core/src/templates",
        "markup": true,
        "nav-depth": 4,
        "title": "Decanter"
      }
    },
    {
      "build/plugins/sassdoc.js": {
        "src": "./core/src/scss/",
        "dest": "./styleguide/docs/scss"
      }
    },
    {
      "metalsmith-collections": {
        "posts": "posts/*.md"
      }
    },
    { "metalsmith-markdown": true },
    {
      "metalsmith-permalinks": {
        "relative": false
      }
    },
    {
      "metalsmith-layouts": {
        "directory": "build/layouts"
      }
    }
  ]
}
