<div class="page-layout page-layout--three-column">
  <header class="region region--header page-layout--three-column--header">
    {{ header_content }}
  </header>
  <div role="main" class="region region--content page-layout--three-column--content">
    {{ main_content }}
  </div>
  <aside class="region region--sidebar region--sidebar-first page-layout--three-column--sidebar-first">
    {{ first_sidebar_content }}
  </aside>
  <aside class="region region--sidebar region--sidebar-second page-layout--three-column--sidebar-second">
    {{ second_sidebar_content }}
  </aside>
  <footer class="region region--footer page-layout--three-column--footer">
    {{ footer_content }}
  </footer>
</div>
